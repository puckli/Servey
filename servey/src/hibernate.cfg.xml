<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

<session-factory>
	<property name="connection.url">jdbc:mysql://localhost:3306/servey</property>
	<property name="connection.username">root</property>
	<property name="connection.password">9999</property>
	<property name="connection.driver_class">
		com.mysql.jdbc.Driver
	</property>
	<property name="dialect">
		org.hibernate.dialect.MySQL5Dialect
	</property>
	<property name="show_sql">true</property>
	
	<mapping resource="com/bean/answer.hbm.xml" />
	<mapping resource="com/bean/question.hbm.xml" />
	<mapping resource="com/bean/serveys.hbm.xml" />
	<mapping resource="com/bean/user.hbm.xml" />

</session-factory>

</hibernate-configuration>